# Environment Variables Configuration
# Copy this file to .env and update the values

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/campus-skill-swap
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/campus-skill-swap

# JWT Secret Key (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Configuration
PORT=5000
NODE_ENV=development

# Allowed Campus Email Domains (comma-separated)
ALLOWED_DOMAINS=university.edu,college.edu,school.edu

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:3000
